generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id        Int           @id @default(autoincrement())
  email     String        @unique
  name      String?
  password  String        // Hashed password
  createdAt DateTime      @default(now())
  updatedAt DateTime      @updatedAt
  integrations Integration[]
  orders    Order[]
  products  Product[]
  inventory Inventory[]
  labels    Label[]
  workerJobs WorkerJob[]
  webhookEvents WebhookEvent[]
}

model Integration {
  id        Int      @id @default(autoincrement())
  type      String   // 'AMAZON', 'SHOPIFY', 'WOO'
  name      String?  // Friendly name e.g. "My US Store"
  credentials String // JSON string of credentials (encrypted ideally, plain for MVP)
  userId    Int
  user      User     @relation(fields: [userId], references: [id])
  webhooks  WebhookSubscription[]
  inventorySyncEnabled Boolean @default(false)
  inventorySyncIntervalMinutes Int @default(60)
  lastInventorySyncAt DateTime?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model WebhookEvent {
  id          Int      @id @default(autoincrement())
  source      String
  eventType   String?
  payload     String
  userId      Int?
  user        User?    @relation(fields: [userId], references: [id])
  receivedAt  DateTime @default(now())
  processedAt DateTime?
}

model WebhookSubscription {
  id            Int      @id @default(autoincrement())
  integrationId Int
  topic         String
  address       String
  status        String   @default("ACTIVE")
  lastError     String?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  integration   Integration @relation(fields: [integrationId], references: [id])

  @@unique([integrationId, topic], name: "integrationId_topic")
}

model Order {
  id         Int      @id @default(autoincrement())
  externalId String?
  source     String
  status     String
  total      Float?
  currency   String?
  payload    String?
  userId     Int
  user       User     @relation(fields: [userId], references: [id])
  items      OrderItem[]
  labels     Label[]
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
}

model OrderItem {
  id        Int      @id @default(autoincrement())
  orderId   Int
  sku       String
  name      String?
  quantity  Int
  price     Float?
  order     Order    @relation(fields: [orderId], references: [id])
}

model Product {
  id        Int      @id @default(autoincrement())
  sku       String
  name      String?
  userId    Int
  user      User     @relation(fields: [userId], references: [id])
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([userId, sku])
}

model Inventory {
  id        Int      @id @default(autoincrement())
  sku       String
  quantity  Int
  userId    Int
  user      User     @relation(fields: [userId], references: [id])
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([userId, sku])
}

model InventoryLog {
  id        Int      @id @default(autoincrement())
  sku       String
  delta     Int
  reason    String
  userId    Int?
  createdAt DateTime @default(now())
}

model InventoryBroadcast {
  id        Int      @id @default(autoincrement())
  source    String?
  payload   String
  createdAt DateTime @default(now())
}

model EventLog {
  id        Int      @id @default(autoincrement())
  type      String
  payload   String
  createdAt DateTime @default(now())
}

model WorkerJob {
  id        Int      @id @default(autoincrement())
  type      String
  status    String
  payload   String?
  attempts  Int      @default(0)
  lastError String?
  userId    Int
  user      User     @relation(fields: [userId], references: [id])
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Label {
  id        Int      @id @default(autoincrement())
  orderId   Int?
  order     Order?   @relation(fields: [orderId], references: [id])
  url       String
  userId    Int
  user      User     @relation(fields: [userId], references: [id])
  createdAt DateTime @default(now())
}
